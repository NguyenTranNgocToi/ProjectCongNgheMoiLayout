<header id="wrap-header">
    <div class="container">

        <div class="row">
            <h2 class="text-center">Xếp lịch học

            </h2>
        </div>

        <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12" style="margin-top: 2%;">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="margin-top: 1%;">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <h4>Thêm Lịch Học Bằng File Excel</h4>
                        <form id="uploadForm3" enctype="multipart/form-data" action="/nhanvien/xeplichhoc/uploadfilelh"
                            method="post">
                            <input type="file" name="myfilelh" value="Chọn file" />
                            <br />
                            <input type="submit" value="Đưa lên server" name="submit">
                            <br />
                            <span id="status"></span><br>
                        </form>
                        <a href="/nhanvien/xeplichhoc/savedata" class="btn btn-primary">Lưu dữ liệu từ file</a><br /><br><br>
                    </div>
                    <h3>Danh sách lịch học phần</h3>
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <form class="form-inline" action="/nhanvien/xeplichhoc/timlhp" method="get">
                            <div class="form-group">
                                <label for="malophocphan">Mã lớp học phần:</label>&ensp;&ensp;
                                <input type="text" class="form-control" name="malophocphan" size="50" required>&ensp;
                            </div>
                            <button type="submit" class="btn btn-default">Tìm kiếm</button>
                        </form><br>
                    </div>

                   

                    <table class="table table-bordered" style="margin-top: 2%;">
                        <thead>
                            <tr>
                                <th>Mã lớp</th>
                                <th>Nhóm</th>
                                <th>Tiết học</th>
                                <th>Ngày học</th>
                                <th>Phòng học</th>
                                <th>Mã giảng viên</th>
                                <th>Ngày bắt đầu</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <%for(let i=0;i< listlh.length;i++){%>
                                <tr>
                                    <!-- <td><input type="radio"></td> -->
                                    <td>
                                        <%=listlh[i].MaLopHP%>
                                    </td>
                                    <td>
                                        <%=listlh[i].MaNhom%>
                                    </td>
                                    <td>
                                        <%=listlh[i].TietHoc%>
                                    </td>
                                    <td>
                                        <%=listlh[i].NgayHoc%>
                                    </td>
                                    <td>
                                        <%=listlh[i].PhongHoc%>
                                    </td>
                                    <td>
                                        <%=listlh[i].MaGV%>
                                    </td>
                                    <td>
                                        <%=listlh[i].NgayBatDau.getDate().toString()%>-
                                            <%=(listlh[i].NgayBatDau.getMonth()+1).toString()%>-
                                                <%=listlh[i].NgayBatDau.getFullYear().toString()%>
                                    </td>
                                    <td>
                                        <a href="/nhanvien/xeplichhoc/xoalich/<%=listlh[i].MaLopHP%>&<%=listlh[i].MaNhom%>" 
                                            class="btn btn-danger ">Xóa</a>
                                    </td>
                                </tr>
                                <%}%>
                        </tbody>
                    </table>
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

                        <%for(let i=0;i< sotrang;i++){%>
                            <a href="/nhanvien/xeplichhoc?page=<%=i%>">
                                <%=i%>
                            </a>
                        <%}%>


                    </div>
                </div>
            </div>

        </div>

    </div>
    <script>
        $(document).ready(function () {
            $('#uploadForm3').submit(function () {
                $("#status").empty().text("Đang tải thư mục lên...");

                $(this).ajaxSubmit({

                    error: function (xhr) {
                        status('Error: ' + xhr.status);
                    },

                    success: function (response) {
                        console.log(response)
                        $("#status").empty().text(response);
                    }
                });
                return false;
            });
        });
    </script>

</header>